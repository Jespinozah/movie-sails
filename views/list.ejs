<h3>Movies</h1>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% movies.forEach(function(movie){%>
      <tr>
        <td><%= movie.id %></td>
        <td><%= movie.title %></td>
        <td>
          <div class="row">
            <a href="/movies/edit/<%= movie.id %>" class="btn waves-effect red darken-1 col s4">Edit</a>
            <form action="/movies/delete/<%= movie.id %>" method="post" class="col s8">
              <button class="btn waves-effect waves-light" type="submit" name="action">
                Delete
              </button>
            </form>
          </div>
        </td>
      </tr>
    <%})%>
  </tbody>
</table>
